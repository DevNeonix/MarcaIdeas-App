<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jolver.nestor.marcaideas.Activities.DetalleOfertaActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/ado_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        app:title="Nombre de la promo"
        app:titleTextColor="#ffffff"
        android:background="@color/colorPrimary"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/ado_ivOferta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxHeight="200dp"
                android:minHeight="150dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                >

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.CardView
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:layout_marginRight="5dp"
                        android:padding="10dp"
                        app:cardCornerRadius="5dp"
                        android:layout_weight="1">
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Antes"
                                android:textColor="@color/colorAccent"/>
                            <TextView
                                android:id="@+id/ado_tvantes"
                                android:textColor="#fff"
                                android:textSize="30dp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="$10"/>
                            <TextView
                                android:textColor="#fff"
                                android:id="@+id/ado_tvdescuento"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="15% Dcto."/>
                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:padding="10dp"
                        app:cardCornerRadius="5dp"
                        app:cardBackgroundColor="@color/colorPrimary"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:textColor="@color/colorAccent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Ahora"/>
                            <TextView
                                android:id="@+id/ado_tvahora"
                                android:textSize="30dp"
                                android:textColor="#ffff00"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="$8.5"
                                />
                            <TextView
                                android:id="@+id/ado_tvahorro"
                                android:textColor="#ffff00"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:text="Ahorro $1.5"
                                />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/ado_tvdescripcion"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripcion"/>
            <TextView
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/ado_tvfecha"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2018-03-04 a 2018-04-09"/>
            <TextView
                android:textSize="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Condiciones"
                android:textColor="@color/colorPrimary"/>
            <TextView
                android:id="@+id/ado_tvcondiciones"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="lorem asdasd asda sda sdas das das dasd asd asd asd asd asdas d as dasd asd as das dasd asd asdasd ads sa"/>
        </LinearLayout>


    </ScrollView>
</LinearLayout>
